{
  "name": "retail-product-catalog",
  "version": "1.0.0",
  "description": "Retail Product Catalog with Fuzzy Search Capability",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "coverage": "c8 --reporter=lcov jest",
    "coverage:view": "c8 --reporter=html --reporter=text jest",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint",
    "lint:fix": "eslint",
    "prepare": "husky",
    "release:first": "npm run release -- --first-release",
    "start": "tsc && node dist/server.js",
    "start:dev": "node --watch -r ts-node/register src/server.ts",
    "test": "jest",
    "test:watch": "npm test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^12.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@types/pino": "^7.0.5",
    "fastify": "^5.0.0",
    "http-status-codes": "^2.3.0",
    "pino": "^9.4.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "c8": "^10.1.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "sinon": "^19.0.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
